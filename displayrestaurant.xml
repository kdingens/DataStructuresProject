<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:id="@+id/text1"
        android:layout_width="383dp"
        android:layout_height="119dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#ffffff"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="469dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="346dp"
                android:layout_height="181dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="43dp" />


            <TextView
                android:id="@+id/rating"
                android:layout_width="194dp"
                android:layout_height="37dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round"
                android:text="TextView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image1" />

            <TextView
                android:id="@+id/price"
                android:layout_width="195dp"
                android:layout_height="37dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round"
                android:text="TextView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating" />

            <TextView
                android:id="@+id/openNow"
                android:layout_width="123dp"
                android:layout_height="82dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round"
                android:text="TextView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image1" />

            <LinearLayout
                android:id="@+id/weblay"
                android:layout_width="125dp"
                android:layout_height="45dp"
                app:layout_constraintHorizontal_bias="0.591"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hours">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weblay">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/navyround"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/pnum"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/navyround"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/blank"
                    android:layout_width="150dp"
                    android:layout_height="8dp"
                    android:gravity="center"
                    android:textColor="@color/gold"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/goldbar1"
                    android:layout_width="380dp"
                    android:layout_height="30px"
                    android:background="@color/gold"
                    android:gravity="center"
                    android:text=" " />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="REVIEWS:"
                    android:textColor="@color/gold"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/goldbar2"
                    android:layout_width="340dp"
                    android:layout_height="30px"
                    android:gravity="center"
                    android:text=" "
                    android:background="@color/gold"
                    android:textSize="30dp" />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/hours"
                android:layout_width="397dp"
                android:layout_height="107dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/gold"
                android:orientation="vertical"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/openNow">


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
